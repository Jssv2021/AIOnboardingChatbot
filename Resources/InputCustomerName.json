{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "text": "Please enter your FirstName, MiddleName, LastName",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "placeholder": "First Name",
      "id": "FirstName",
      "validation": {
        "necessity": "Required",
        "errorMessage": "First Name is required"
      }
    },
    {
      "type": "Input.Text",
      "placeholder": "Middle Name",
      "id": "MiddleName"
    },
    {
      "type": "Input.Text",
      "placeholder": "Last Name",
      "id": "LastName",
      "validation": {
        "necessity": "Required",
        "errorMessage": "Last Name is required"
      }
    },
    {
      "type": "Input.Text",
      "placeholder": "MobileNumber",
      "id": "MobileNumber",
      "validation": {
        "necessity": "Required",
        "errorMessage": "Mobile Number is required"
      }
    }

  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "actions": [
    {
      "type": "Action.Submit",
      "title": "OK",
      "data": {
        "button": "CustomerNameOK"
      }
    }
  ]
}