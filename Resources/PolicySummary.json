{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "text": "Policy Details",
      "wrap": true
    },
    {
      "type": "Input.Date",
      "placeholder": "Policy start date",
      "id": "PolicyStartDate",
      "validation": {
        "necessity": "Required",
        "errorMessage": "PolicyStartDate is required"
      }
    },
    {
      "type": "Input.Date",
      "placeholder": "Policy end date",
      "id": "PolicyExpiryDate",
      "validation": {
        "necessity": "Required",
        "errorMessage": "Policy end date is required"
      }
    },
    {
      "type": "Input.ChoiceSet",
      "choices": [
        {
          "title": "Credit",
          "value": "Credit"
        },
        {
          "title": "Debit",
          "value": "Debit"
        }
      ],
      "placeholder": "Payment Option",
      "id": "PO",
      "validation": {
        "necessity": "Required",
        "errorMessage": "Payment Option is required"
      }
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "actions": [
    {
      "type": "Action.Submit",
      "title": "OK",
      "data": {
        "button": "PolicySummaryOk"
      }
    }
  ]
}