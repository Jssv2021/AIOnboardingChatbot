{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "text": "Enter Mailing Address",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "label": "Address Line 1",
      "value": "${addressLine1}",
      "id": "addressLine1",
      "validation": {
        "necessity": "Required",
        "errorMessage": "AddressLine1 is required"
      }
    },
    {
      "type": "Input.Text",
      "label": "Address Line 2",
      "value": "${addressLine2}",
      "id": "addressLine2"

    },
    {
      "type": "Input.Text",
      "label": "State",
      "value": "${state}",
      "id": "state",
      "validation": {
        "necessity": "Required",
        "errorMessage": "State is required"
      }
    },
    {
      "type": "Input.Text",
      "value": "${emailAddress}",
      "id": "emailAddress",
      "isVisible": false
    },
    {
      "type": "Input.Text",
      "value": "${customerId}",
      "id": "customerId",
      "isVisible": false
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "actions": [
    {
      "type": "Action.Submit",
      "title": "OK",
      "data": {
        "button": "UpdateMailingAddressOK"
      }
    }
  ]
}