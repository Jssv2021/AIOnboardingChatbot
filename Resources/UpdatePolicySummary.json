{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "text": "Policy Details",
      "wrap": true
    },
    {
      "type": "Input.Date",
      "label": "Policy Start Date",
      "value": "${policyEffectiveDate}",
      "id": "policyEffectiveDate",
      "validation": {
        "necessity": "Required",
        "errorMessage": "Policy start date is required"
      }
    },
    {
      "type": "Input.Date",
      "label": "Policy Expiration Date",
      "value": "${policyExpiryDate}",
      "id": "policyExpiryDate",
      "validation": {
        "necessity": "Required",
        "errorMessage": "Policy expiration is required"
      }
    },
    {
      "type": "Input.ChoiceSet",
      "label": "Payment Option",
      "value": "${paymentOption}",
      "choices": [
        {
          "title": "Credit",
          "value": "Credit"
        },
        {
          "title": "Debit",
          "value": "Debit"
        }
      ],
      "id": "paymentOption",
      "validation": {
        "necessity": "Required",
        "errorMessage": "Payment Option is required"
      }
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "actions": [
    {
      "type": "Action.Submit",
      "title": "OK",
      "data": {
        "button": "UpdatePolicySummaryOk"
      }
    }
  ]
}